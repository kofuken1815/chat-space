.wrapper
  .side-bar
    .side-header 
      .s-h-box
        %p.username 
          = current_user.name
        %ul.menu
          %li.icon
            = link_to new_group_path(current_user),method: :get do
              = icon('far','edit',class:"ro")
          %li.icon
            = link_to edit_user_path(current_user) do
              = icon('fas','cog',class:"ro")
    .groups
      - current_user.groups.each do |group|
        .group 
          = link_to group_messages_path(group),class:"ka" do
            .groupname 
              = group.name 
            .grouptext
              = group.show_last_message
        


